<main>
    <div class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <p>Posted by {{post.User.username}} on {{post.createdAt}}</p>
    </div>

    <!-- Form for creating comments -->
    <form id="commentForm">
        <textarea name="content" placeholder="Write your comment here..."></textarea>
        <button type="submit">Submit</button>
    </form>

    <!-- Display comments -->
    <div id="comments">
        {{#each post.comments}}
            <p>{{this.content}} - {{this.User.username}}</p>
        {{/each}}
    </div>
</main>
